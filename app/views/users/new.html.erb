<center><h3>Register a New User</h3>

<%= form_with model: User.new, local: true do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br><br>
  <%= f.label "Email:" %>
  <%= f.text_field :email %><br><br>
  <%= f.label :password, 'Password:' %>
  <%= f.text_field :password %><br><br>
  <%= f.label :password_confirmation, 'Password Confirmation:' %>
  <%= f.text_field :password_confirmation %><br><br>
  <%= f.submit "Create New User" %>
<% end %></center>
